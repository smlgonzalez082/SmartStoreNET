
@model IList<ProductDetailsModel.ProductVariantAttributeModel>
@using SmartStore.Web.Models.Catalog;
@using SmartStore.Web;
@{
    var attributes = Model.Where(x => x.ShouldBeRendered()).ToList();
    var i = 0;
}
<div class="pd-variants">
    <div class="row">

        @foreach (var attribute in attributes)
        {
            if (i != 0)
            {
                <div class="col-1 hidden-xs">
                    <i class="fa fa-times" style="position:absolute; bottom: 30px; left:30px;"></i>
                </div>
            }
            <div class="col-4 col-sm-3 col-md-3 col-lg-3">
                @{Html.RenderPartial("ChoiceTemplates/Choice", attribute); }
            </div>
            i++;
        }
    </div>
</div>